doctype html
html
    head
        title Knowledge Base
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel="stylesheet", href="/css/style.css")
        
    body
        .d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.shadow-sm
            h5.my-0.mr-md-auto.font-weight-normal Knowledge Base
            nav.my-2.my-md-0.mr-md-3
                a.p-2.text-dark(href='/') Home
                if user
                    a.p-2.text-dark(href='/articles/add') Host Games
                if user
                    a.btn.btn-outline-primary(href='/users/logout') Logout
                else
                    a.btn.btn-outline-primary(href='/users/login') Login
                    a.btn.btn-outline-primary(href='/users/register') Sign up

         

        .container
            != messages('message', locals)
            if errors 
                each error, i in errors 
                    div(class='alert alert-danger') #{error.msg}
            block content
            br 
            hr
            footer
                p copyright &copy; 2017
        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/main.js')